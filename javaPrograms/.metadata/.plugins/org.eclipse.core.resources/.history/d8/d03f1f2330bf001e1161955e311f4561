package logics;

import java.util.Scanner;

public class DecimalToBinary {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc=new Scanner(System.in);
		System.out.println("enter a number");
		int n=sc.nextInt();
		int[] a;
		int rem;
		int i=0;
		while(n!=0)
		{
			rem=n%2;
			n=n/2;
			a[i]=rem;
			
		}

	}

}
